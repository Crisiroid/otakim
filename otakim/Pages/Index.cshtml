<style>
    /* Base Styles */
    body {
        font-family: 'Inter', sans-serif;
    }

    /* Hero Section */
    .hero {
        height: 100vh;
        min-height: 600px;
        background: linear-gradient(135deg, rgba(13, 110, 253, 0.8), rgba(102, 16, 242, 0.8)), url('https://images.unsplash.com/photo-1486312338219-ce68d2c6f44d?ixlib=rb-4.0.3&auto=format&fit=crop&w=1200&q=80') center/cover no-repeat;
        position: relative;
    }

    .scroll-down-arrow {
        position: absolute;
        bottom: 30px;
        left: 50%;
        transform: translateX(-50%);
        color: white;
        font-size: 2rem;
        animation: bounce 2s infinite;
    }

    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0) translateX(-50%);
        }

        40% {
            transform: translateY(-20px) translateX(-50%);
        }

        60% {
            transform: translateY(-10px) translateX(-50%);
        }
    }

    /* Animations */
    .animate-fade-in {
        opacity: 0;
        animation: fadeIn 1s forwards;
    }

    .delay-1 {
        animation-delay: 0.3s;
    }

    .delay-2 {
        animation-delay: 0.6s;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Feature Cards */
    .feature-card {
        transition: transform 0.3s ease;
    }

        .feature-card:hover {
            transform: translateY(-5px);
        }

    .feature-icon {
        width: 80px;
        height: 80px;
        background: rgba(13, 110, 253, 0.1);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
    }

        .feature-icon i {
            font-size: 2rem;
            color: #0d6efd;
        }

    /* How It Works */
    .how-it-works-image {
        position: relative;
    }

        .how-it-works-image:before {
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #0d6efd, #6610f2);
            border-radius: 0.375rem;
            top: 10px;
            left: 10px;
            z-index: -1;
        }

    .step-number {
        width: 40px;
        height: 40px;
        background: #0d6efd;
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        font-weight: bold;
    }

    /* Testimonials */
    .testimonial-card {
        transition: transform 0.3s ease;
    }

        .testimonial-card:hover {
            transform: translateY(-5px);
        }

    /* Pricing */
    .popular-plan {
        position: relative;
        z-index: 1;
    }

    .popular-badge {
        position: absolute;
        top: -10px;
        left: 50%;
        transform: translateX(-50%);
        background: #0d6efd;
        color: white;
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: bold;
    }

    /* FAQ */
    .accordion-button:not(.collapsed) {
        background-color: rgba(13, 110, 253, 0.1);
        color: #0d6efd;
        font-weight: bold;
    }

    /* CTA Section */
    .cta {
        background: linear-gradient(135deg, #0d6efd, #6610f2);
    }

    /* Footer */
    footer a {
        transition: color 0.3s ease;
    }

        footer a:hover {
            color: white !important;
        }

    .social-icons a {
        display: inline-block;
        width: 36px;
        height: 36px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        text-align: center;
        line-height: 36px;
        transition: background 0.3s ease;
    }

        .social-icons a:hover {
            background: rgba(255, 255, 255, 0.2);
        }
</style>